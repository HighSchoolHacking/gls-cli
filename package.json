{
    "name": "gls-cli",
    "version": "0.2.0",
    "description": "Node CLI for General Language Syntax (GLS).",
    "main": "lib/index.js",
    "bin": {
        "gls": "bin/gls"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/highschoolhacking/gls-cli.git"
    },
    "keywords": ["general", "language", "syntax", "gls", "cli"],
    "author": "Josh Goldberg <joshuakgoldberg@outlook.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/highschoolhacking/gls-cli/issues"
    },
    "homepage": "https://github.com/highschoolhacking/gls-cli#readme",
    "dependencies": {
        "chalk": "^2.4.2",
        "commander": "^3.0.2",
        "glob": "^7.1.4",
        "minimatch": "^3.0.4",
        "mz": "^2.7.0"
    },
    "devDependencies": {
        "@types/chai": "^4.2.3",
        "@types/chalk": "^2.2.0",
        "@types/commander": "^2.12.2",
        "@types/glob": "^7.1.1",
        "@types/minimatch": "^3.0.3",
        "@types/mocha": "^5.2.7",
        "@types/mz": "0.0.32",
        "@types/node": "^12.7.9",
        "@types/sinon": "^7.5.0",
        "@types/sinon-chai": "^3.2.3",
        "@typescript-eslint/eslint-plugin": "^2.3.3",
        "@typescript-eslint/eslint-plugin-tslint": "^2.3.3",
        "@typescript-eslint/parser": "^2.3.3",
        "chai": "^4.2.0",
        "del": "^5.1.0",
        "eslint": "^6.5.1",
        "husky": "^3.0.8",
        "mocha": "^6.2.1",
        "prettier": "^1.18.2",
        "pretty-quick": "^1.11.1",
        "sinon": "^7.5.0",
        "sinon-chai": "^3.3.0",
        "tslint": "^5.20.0",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^3.6.3"
    },
    "peerDependencies": {
        "general-language-syntax": "^0.3.25",
        "ts-gls": "^0.3.1",
        "typescript": "^3.6.3"
    },
    "scripts": {
        "prettier:write": "prettier --config .prettierrc.json --write",
        "prettier:write:all": "npm run prettier:write ./{src,test}/**/*.{json,ts}",
        "src": "npm run src:tsc && npm run src:lint",
        "src:tsc": "tsc",
        "src:lint": "eslint src/**/*.ts --config eslintrc.js",
        "test": "npm run test:tsc && npm run test:lint && npm run test:run",
        "test:tsc": "tsc -p test",
        "test:lint": "eslint test/**/*.ts --config test/eslintrc.js",
        "test:run": "mocha test/*.js test/**/*.js",
        "verify": "npm run src && npm run test"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged --write"
        }
    }
}
